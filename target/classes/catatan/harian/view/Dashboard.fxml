<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="750.0" prefWidth="850.0" spacing="15.0" styleClass="root" stylesheets="@/styles/dashboard.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="catatan.harian.controller.DashboardController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <children>
        <Label fx:id="welcomeLabel" text="Halo, [Nama Pengguna]!">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <VBox alignment="CENTER" prefWidth="250.0" styleClass="summary-card" id="pemasukan-card">
                    <children>
                        <Label text="TOTAL PEMASUKAN" styleClass="summary-card-title" />
                        <Label fx:id="pemasukanLabel" text="Rp 0" styleClass="summary-card-value" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefWidth="250.0" styleClass="summary-card" id="pengeluaran-card">
                    <children>
                        <Label text="TOTAL PENGELUARAN" styleClass="summary-card-title" />
                        <Label fx:id="pengeluaranLabel" text="Rp 0" styleClass="summary-card-value" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefWidth="250.0" styleClass="summary-card" id="saldo-card">
                    <children>
                        <Label text="SALDO AKHIR" styleClass="summary-card-title" />
                        <Label fx:id="saldoLabel" text="Rp 0" styleClass="summary-card-value" />
                    </children>
                </VBox>
            </children>
        </HBox>
        
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <Button fx:id="tambahButton" mnemonicParsing="false" onAction="#handleTambahButton" prefHeight="35.0" prefWidth="150.0" text="Tambah Transaksi" />
                <Button fx:id="hapusButton" mnemonicParsing="false" onAction="#handleHapusButton" prefHeight="35.0" prefWidth="150.0" text="Hapus Transaksi" />
                <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEditButton" prefHeight="35.0" prefWidth="150.0" text="Edit Transaksi" />
                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogoutButton" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #607d8b;" text="Logout" />
            </children>
        </HBox>
        
        <TableView fx:id="tabelTransaksi" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="kolomTanggal" prefWidth="120.0" text="Tanggal" />
                <TableColumn fx:id="kolomKategori" prefWidth="150.0" text="Kategori" />
                <TableColumn fx:id="kolomDeskripsi" prefWidth="250.0" text="Deskripsi" />
                <TableColumn fx:id="kolomPemasukan" prefWidth="125.0" style="-fx-alignment: CENTER-RIGHT;" text="Pemasukan" />
                <TableColumn fx:id="kolomPengeluaran" prefWidth="125.0" style="-fx-alignment: CENTER-RIGHT;" text="Pengeluaran" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <Label text="Ringkasan 7 Hari Terakhir">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>
        <BarChart fx:id="barChart" prefHeight="250.0" VBox.vgrow="SOMETIMES">
          <xAxis>
            <CategoryAxis side="BOTTOM" />
          </xAxis>
          <yAxis>
            <NumberAxis side="LEFT" />
          </yAxis>
        </BarChart>
    </children>
</VBox>