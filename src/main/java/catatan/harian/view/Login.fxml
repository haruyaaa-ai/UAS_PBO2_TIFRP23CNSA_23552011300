<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="catatan.harian.controller.LoginController">
   <children>
      <Label layoutX="146.0" layoutY="38.0" text="Selamat Datang!">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label layoutX="70.0" layoutY="110.0" text="Username" />
      <TextField fx:id="usernameField" layoutX="155.0" layoutY="106.0" prefWidth="175.0" promptText="Masukkan username" />
      <Label layoutX="70.0" layoutY="154.0" text="Password" />
      <PasswordField fx:id="passwordField" layoutX="155.0" layoutY="150.0" prefWidth="175.0" promptText="Masukkan password" />
      <Button fx:id="loginButton" layoutX="174.0" layoutY="205.0" mnemonicParsing="false" onAction="#handleLoginButtonAction" prefWidth="80.0" text="Login" />
      <Label fx:id="errorLabel" alignment="CENTER" layoutX="20.0" layoutY="250.0" prefWidth="360.0" textFill="RED" />
      <Hyperlink fx:id="registerLink" layoutX="128.0" layoutY="265.0" onAction="#handleRegisterLink" text="Belum punya akun? Daftar di sini" />
   </children>
</AnchorPane>